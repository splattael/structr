require 'rake'
require 'rake/testtask'
require 'rake/rdoctask'

desc 'Default: run unit tests.'
task :default => :test

require 'echoe'

Echoe.new('structr') do |gem|
  gem.version = '0.0.1'
  gem.author = 'Peter Suschlik'
  gem.summary = 'Bind plain text to Ruby classes.'
  gem.email = 'peter-structr@suschlik.de'
  gem.url = %q{http://github.com/splattael/structr}
end
